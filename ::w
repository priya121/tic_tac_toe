require 'player'

describe Players do 
  let(:board) {[" "," "," "," "," "," "," "," "," "]}
  
  it 'takes an input from player 1' do 
    input = StringIO.new('1')
    marked_board = Players.new(board,input).player_one_move
    expect(marked_board).to include("x")
  end
  
  it 'takes an input from player 1' do 
    input = StringIO.new('1')
    marked_board = Players.new(board,input).player_two_move
    expect(marked_board).to include("o")
  end

  it 'only allows a mark to be made if there is an empty space' do
    input = StringIO.new("1\n1\n")
    marked_board = Players.new(board,input).player_one_move
    expect(output).to include("retry")
  end

end
